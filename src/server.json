import express from 'express';
import path from 'path';
import { fileURLToPath } from 'url';

// --- Famaritana ny lalana amin'ny tontolo iasana Node.js ---
const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

const app = express();
const PORT = process.env.PORT || 3000;

// Ny lahatahiry ho an'ny rakitra namboarina nataon'i Vite (izay misy ny index.html sy ny assets)
const buildPath = path.join(__dirname, 'dist');

// Manompo rakitra statika (JS, CSS, sary) avy amin'ny lahatahiry 'dist'
app.use(express.static(buildPath));

// Ny fangatahana rehetra tsy mifanaraka amin'ny rakitra statika dia aterina any amin'ny index.html.
// Izany dia manome antoka fa miasa tsara ny client-side routing an'ny React.
app.get('/*', (req, res) => {
  res.sendFile(path.join(buildPath, 'index.html'));
});

// Fanombohana ny server
app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
  console.log(`Serving static files from: ${buildPath}`);
});

// Azo antoka fa mila ampidirina ny 'express' sy 'path' ary 'dotenv' (raha ilaina) 
// ao anaty rakitra package.json ianao.
// Ny 'path' dia module Node.js namboarina.